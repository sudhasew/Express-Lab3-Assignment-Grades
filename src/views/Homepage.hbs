<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="../css/styles.css" />
    <title>Homepage</title>
  </head>
  <body>
    <div class="homePage">
      <h1 style="font-size: 3rem; margin:15px 0">Assignments</h1>
      <table>
        <thead>
          <tr style="font-size:1.4rem">
            <th>Assignments</th>
            <th>Score</th>
            <th>Total</th>
            <th>Completed</th>
            <th>Actions</th>
          </tr>
        </thead>
        {{#each assignments}}
          <tbody>
            <tr style="font-size:1.7rem; font-weight:900;">
              <td>{{Assignment}}</td>
              <td style="text-align: center;">{{Score}}</td>
              <td style="text-align: center;">{{Total}}</td>
              <td style="text-align: center;">{{Completed}}</td>
              {{! <td>&#10004;</td> }}
              <td><a href="/delete/{{Assignment}}">Delete</a>{{delete}}</td>
            </tr>
          </tbody>
        {{/each}}
      </table>
      <h2 class="overAll">Overall Average: </h2>
      <div class="assAssignment">
        <a class="addAssgn" href="/addAssignment">Add an Assignment</a>
      </div>
    </div>
  </body>
</html>